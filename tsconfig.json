{
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": "./",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true
  },
  "exclude": [],
  "include": ["src", "demo", "index.d.ts", "types.d.ts"]
}
